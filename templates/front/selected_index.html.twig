		{% for book in books %}
			<a href="{{ path('book_show', {'slug': book.slug}) }}">
				<div class="row{% if book == openBook %} open-book-row{% endif %} mt-3 mx-0">
					<div class="col-md-4">
						{{ book.author.lastName }}
					</div>
					<div class="col-md-8">
						{{ book.title }}
					</div>
				</div>
			</a>
		{% else %}
			<div>
				Aucun résultat pour votre sélection !!-(
			</div>
		{% endfor %}
	</div>
</div>

