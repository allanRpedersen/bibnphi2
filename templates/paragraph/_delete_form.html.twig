<form method="post" action="{{ path('paragraph_delete', {'id': paragraph.id}) }}" onsubmit="confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ paragraph.id) }}">
    <button class="btn btn-danger mt-2"><i class="fas fa-trash" style="width: 15px; font-size:15px"></i></button>
</form>
