<div class="book-card mb-3 p-1">
    <p style="text-align: center;">
        {% if author.firstName is empty %}
        {% set fullName = author.lastName %}
        {% else %}
        {% set fullName = author.lastName ~ ', ' ~ author.firstName %}
        {% endif %}
        <a href="{{ path('author_show', { 'slug' : author.slug }) }}">{{ fullName }}</a>
    </p>
    <p style="text-align: center; color: brown">~~~</p>
    <p style="text-align: center;">
        <a href="{{ path('book_show', { 'slug' : book.slug }) }}">{{ book.title }}</a>
    </p>
</div>