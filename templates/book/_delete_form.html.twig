<form method="post" action="{{ path('book_delete', {'slug': book.slug}) }}" onsubmit="confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ book.id) }}">
    <button class="btn btn-danger mt-2"><i class="fas fa-trash" style="width: 15px; font-size:15px"></i></button>
</form>
